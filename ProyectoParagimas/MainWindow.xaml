<Window x:Class="ProyectoParagimas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoParagimas"
        mc:Ignorable="d"
       Title="Proyecto Paradigmas" Height="450" Width="800">
    <Grid>
        <Menu Margin="90,277,90,0" Height="35" VerticalAlignment="Top">
            <Label x:Name="lbl_lines" Content="Lineas: 1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="lbl_line" Content="Linea actual: 1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Menu>
        <RichTextBox x:Name="rtbCodigo" Margin="0,34,0,0" TextChanged="rtb_textChanged" FontFamily="Arial" SelectionChanged="rtb_SelectionChanged" Height="238" VerticalAlignment="Top" HorizontalAlignment="Center" Width="620" Background="#FF1E1E1E" Foreground="#FF569CD6">
            <FlowDocument>
                <Paragraph Margin="0.5">

                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
